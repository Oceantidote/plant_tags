<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <h1>Add new tag for <%= @plant.name %></h1>

      <%= simple_form_for [ @plant, @plant_tag ] do |f| %>
        <%= f.input :tag, collection: Tag.all, input_html: {  class: 'multiple-select', multiple: true }, include_hidden: false %>
        <%= f.submit "Add tag", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
